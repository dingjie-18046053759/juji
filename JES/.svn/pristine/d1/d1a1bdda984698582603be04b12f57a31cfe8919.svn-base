@CHARSET "UTF-8";

html,body{ height: 100%;}
html{*overflow-x:auto;color:#525252;height: 100%;}
*{margin:0;padding:0;font-family: Verdana,Arial,'宋体';font-size: 12px;font-style: normal;font-weight: normal;font-variant: normal;} 
img { border:0;vertical-align:middle;} 
em{font-style:normal;font-weight:normal;} 
ul, li, dl, dt, dd, ol { list-style:none;}
h1,h2,h3,h4,h5,h6 { font-size:100%; font-weight:normal; } 
a{text-decoration:none;cursor: pointer;}

.lo_bg{ background: url(../image/login_ico.png) 0 -4px no-repeat;}
.log_top{background: #15577D;height: 14px;padding: 15px 0;width: 100%;}
.log_top i{ height: 15px;width: 20px;float: left;margin: 2px 10px;}
.log_top span,.log_top a{ color: #82A7BD;font-size: 12px;float: left;}
.log_top a{ float: right;padding-right: 20px;}
.log_c{background: url(../image/login_bg.png) center top no-repeat #1E79AE;}
.log_cent{height: 100%;margin: 0 auto;width: 682px;}
.log_centent{padding: 202px 0 0 282px;}
.log_centent div{height: 73px}
.lo_text{background: transparent;border:0;font-size: 14px;font-weight: bold;height: 27px;padding: 10px 0;float: left;line-height: 27px;text-indent: 40px;width: 341px;}
.lo_sub{background-position: -29px 0;border: 0;color: #FFFFFF;float: left;font-size: 14px;font-weight: bold;height: 36px;width: 111px;}
.log_cent i{background-position: -146px 0;float: left;height: 16px;margin: 10px 6px 0 16px;width: 16px;}
.log_cent i.select{ background-position: -167px 0;}
.log_cent a{color: #687F92;font-size: 13px;margin-right: 25px;}
.log_btn{ background: #438FBB;height: 50px;color: #2B6589;line-height: 50px;font-size: 14px;text-align: center;width: 100%;cursor: pointer;}
.lo_error{color:red;font-size:14px;background: url(../images/error.png) 0 9px no-repeat;padding-left: 20px;top: 37px;left: 0;}